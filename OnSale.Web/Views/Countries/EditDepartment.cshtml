
@*recibe el modelo*@
@model OnSale.Common.Entities.Department

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDepartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*se mandan estos 2 atributos escondidos*@
            @*si no lo capturamos aca, se va a perder*@
            @*porque la vista parcial de departamento solo pide el nombre*@
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdCountry" />

            <partial name="_Department" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @*si por algunn motivo el usuario se vuelve al back to list, lo va a hacer al id del country*@
                <a asp-action="Details" asp-route-id="@Model.IdCountry" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

